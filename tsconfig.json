{
	"compilerOptions": {
		"target": "es6",
		"module": "CommonJS",
		"baseUrl": ".",
		"rootDir": ".",
		"typeRoots": ["node_modules/@types", "src/@types"],
		"paths": {
			"@config/*": ["src/config/*"],
			"@helpers/*": ["src/helpers/*"],
			"@middlewares/*": ["src/middlewares/*"],
			"@db/*": ["src/prisma/*"]
		},
		"outDir": "build",
		"strict": true,
		"allowJs": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": ["."],
	"exclude": ["client"],
	"ts-node": {
		"files": true
	}
}
