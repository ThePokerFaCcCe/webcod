{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"typeRoots": ["node_modules/@types", "src/@types"],
		"allowJs": true,
		"rootDir": "./",
		"outDir": "build",
		"esModuleInterop": true,
		"strict": true,
		"resolveJsonModule": true
	},
	"include": ["src"],
	"exclude": ["client"]
}
